<Styles>

	<!-- CUSTOM TEXT STYLES -->
	<Style name="Leader Text" element="p">
		<Attribute name="class" value="leaderText" />
	</Style>
	<Style name="Highlighted Text" element="span">
		<Attribute name="class" value="inlineTextHighlight" />
	</Style>
	<Style name="Citation" element="span">
		<Attribute name="class" value="cite" />
	</Style>	
	<Style name="Quote" element="span">
		<Attribute name="class" value="quote" />
	</Style>
	<Style name="Reference" element="span">
		<Attribute name="class" value="reference" />
	</Style>
	<Style name="Notes" element="span">
		<Attribute name="class" value="note" />
	</Style>
	
	<!-- DEFAULT TEXT STYLES -->
	<Style name="Discreet Text" element="span">
		<Attribute name="class" value="discreetText" />
	</Style>
	<Style name="Upsized Text" element="span">
		<Attribute name="class" value="upSizedText" />
	</Style>
	<Style name="Assistance Link" element="a">
		<Attribute name="class" value="inlineAssistanceXref" />
	</Style>
	
	<!-- IMAGE STYLES -->
	<Style name="Image (Left Aligned)" element="img">
		<Attribute name="class" value="leftAligned" />
	</Style>
	<Style name="Image (Right Aligned)" element="img">
		<Attribute name="class" value="rightAligned" />
	</Style>
	<Style name="Image (Full width)" element="img">
		<Attribute name="class" value="fullWidthImage" />
	</Style>
	
	<!--
	<Style name="Bordered Image" element="img">
		<Attribute name="class" value="borderedImage" />
